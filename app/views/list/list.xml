<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:picker="xml-declaration/picker" loaded="main">
    <Page.actionBar>
        <ActionBar title="Манчкины">
            <ActionBar.actionItems>
                <ActionItem text="Добавить" ios.position="right" tap="onCreate" />
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
    <StackLayout>
        <GridLayout rows="auto" columns="40,*,30" class="item">
            <Image col="0" src="~/views/list/attack.png" stretch="none" />
            <Image col="2" src="~/views/list/level.png" stretch="none" />
        </GridLayout>
        <ListView items="{{ players }}" separatorColor="#fff" class="list">
            <ListView.itemTemplate>
                <GridLayout rows="auto" columns="40,*,20" class="item">
                    <Label col="0" text="{{ attack }}" class="attack" tap="chooseAttack" />
                    <Label col="1" text="{{ name }}" class="name" />
                    <Label col="2" text="{{ level }}" class="level" tap="chooseLevel"/>
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
        <picker:Picker id="attack-picker" />
        <picker:Picker id="level-picker" />
    </StackLayout>
</Page>
